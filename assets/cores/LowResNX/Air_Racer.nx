REM LOAD DIRECTIONS
DIM XDIR(8),YDIR(8)
FOR I=1 TO 8
    READ XDIR(I),YDIR(I)
NEXT I

REM 1 2 3 4
DATA 0,1, -1,1, -1,0, -1,-1
REM 5 6 7 8
DATA 0,-1, 1,-1, 1,0, 1,1

GAMEPAD 1
WINTIME=0

TITLE:
TIME=TIMER
MASTERSPD=1
SPD=MASTERSPD
MAP=3

CLS
PAL 0
SPRITE 1,-8,-8,
PRINT"*****AIR RACER******"
PRINT"  FINISHED TIME:"
PRINT
PRINT "  ";STR$(WINTIME)
PRINT
PRINT"**PRESS A TO START**"

WINTIME=0
DO
IF BUTTON TAP(0,0) THEN GOTO GAME
WAIT VBL
LOOP

GAME:

S=7
X=12
Y=24

CLS
BG 1
BG SOURCE ROM(MAP)
BG COPY 0,0,20,16 TO 0,0
DO


BG 0
PAL 1
NUMBER 0,0,INT(TIMER-TIME),6
BG 1

IF LEFT TAP (0)  THEN S=S-1
IF RIGHT TAP (0) THEN S=S+1

IF S>8 THEN S=1
IF S<1 THEN S=8

X=X+XDIR(S)*SPD
Y=Y+YDIR(S)*SPD

SPRITE 1,X,Y,S

C=CELL.C((X+4)/8,(Y+4)/8)

IF C=11 THEN 
   INC MAP
   IF MAP<=8 THEN GOTO GAME
   IF MAP>8 THEN
      PRINT"   YOU WIN!!!"
      WINTIME=TIMER-TIME
      WAIT 2*60
      GOTO TITLE
   END IF
END IF

IF C=10 THEN 
   WAIT 15
   X=12
   Y=24
   S=7
   
END IF

IF C=14 THEN
   MAP=9
   GOTO GAME 
END IF

IF BUTTON (0,0) THEN 
   SPD=MASTERSPD*2 
ELSE IF BUTTON(0,1) THEN 
   SPD=MASTERSPD/2
ELSE 
   SPD=MASTERSPD
END IF

WAIT VBL
LOOP









