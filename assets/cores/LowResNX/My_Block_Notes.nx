TOUCHSCREEN
FONT 0

''''WAS8BIT''''

ISAVE=1
ITIME=0
COPY $E000,$1000 TO $9000
KEYBOARD ON

SPRITE 0,0,0,64

KEYDELETE=8
KEYRETURN=10

PX=0
PY=0

BG 1
ATTR 1
BG FILL 0,0 TO 20,15 CHAR 66
BG FILL 0,0 TO 0,15 CHAR 65

BG 0
ATTR 0

DO

  K$=INKEY$
  IF K$<>"" THEN
     ISAVE=0
     ITIME=TIMER+45
     K=ASC(K$)
     IF K=KEYDELETE THEN
        TEXT PX,PY," "
        DEC PX
        IF PX<0 AND PY>0 THEN
           PX=19
           DEC PY
        ELSE IF PX<0 THEN
           PX=0
        END IF
     ELSE IF K=KEYRETURN THEN
          PX=0
          IF PY<15 THEN INC PY
     ELSE
         TEXT PX,PY,K$
         INC PX
         IF PX>19 AND PY<15 THEN
               PX=0
               INC PY
         ELSE IF PX>19 THEN
               PX=19
         END IF
     END IF
     SPRITE 0,PX*8,PY*8,
  END IF

  IF TOUCH THEN
     PX=TOUCH.X\8
     PY=TOUCH.Y\8
     SPRITE 0,PX*8,PY*8,
  END IF

  IF TIMER>ITIME AND ISAVE=0 THEN
     ISAVE=1
     PLAY 0,90,1
     COPY $9000,$1000 TO $E000
  END IF
      
 
WAIT VBL
LOOP



