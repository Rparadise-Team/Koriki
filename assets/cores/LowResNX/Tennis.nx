PRINT YS
PRINT TS
Y=Y+1
SPRITE 1,BX,BY,3
SPRITE 2,OX,OY,2
SPRITE 3,X,Y,1
SPRITE 4,72,72,4
SPRITE 5,72,80,5
IF LEFT(0) AND X>0 THEN X=X-1
IF RIGHT(0) AND X<66 THEN X=X+1
IF Y>79 THEN AT=20
IF Y>79 THEN Y=Y-1
IF BXS>0 THEN BXS=BXS-FRIC
IF BXS<0 THEN BXS=BXS+FRIC
IF BX>160 THEN BXS=BXS-BXS-BXS
IF BX<0 THEN BXS=BXS-BXS-BXS
IF BY>82 THEN BOUNCE=BOUNCE+1
IF BY>82 THEN BYS=BYS-BYS-BYS
IF BX<77 AND BX>73 THEN BOUNCE=0
IF BX>77 THEN SIDE=0
IF BX<77 THEN SIDE=1

IF FRI=1 THEN
OY=OY+1
IF LEFT(1) AND OX>78 THEN OX=OX-1
IF RIGHT(1) AND OX<160 THEN OX=OX+1
IF OY>79 THEN ATT=20
IF OY>79 THEN OY=OY-1
END IF

IF FRI=0 THEN
IF BX>OX THEN OX=OX+OS
IF BX<OX AND OX>84 THEN OX=OX-OS
IF SPRITE HIT(1) AND SPRITE HIT(2) THEN BXS=-1.5+RND*0.4
IF SPRITE HIT(1) AND SPRITE HIT(2) THEN BYS=-2.1+RND*0.5
IF SPRITE HIT(1) AND SPRITE HIT(4) THEN BXS=BXS-BXS-BXS
IF SPRITE HIT(1) AND SPRITE HIT(5) THEN BXS=BXS-BXS-BXS
IF SPRITE HIT(1) AND SPRITE HIT(5) OR SPRITE HIT(1) AND SPRITE HIT(4) THEN BYS=BYS-0.5
END IF

IF SPRITE HIT(3) AND SPRITE HIT(1) AND BUTTON(0,1) THEN BXS=1.8+RND*0.4

IF SPRITE HIT(3) AND SPRITE HIT(1) AND BUTTON(0,1) THEN BYS=-1.4-RND*0.4

IF SPRITE HIT(3) AND SPRITE HIT(1) AND BUTTON(0,0) THEN BXS=1.3+RND*0.4

IF SPRITE HIT(3) AND SPRITE HIT(1) AND BUTTON(0,0) THEN BYS=-1.8-RND*0.4

IF BOUNCE=2 AND SIDE=1 THEN GOTO LOSE
IF BOUNCE=2 AND SIDE=0 THEN GOTO WIN

IF FRI=1 THEN
IF SPRITE HIT(2) AND SPRITE HIT(1) AND BUTTON(1,1) THEN BXS=-1.8-RND*0.4

IF SPRITE HIT(2) AND SPRITE HIT(1) AND BUTTON(1,1) THEN BYS=-1.4-RND*0.4

IF SPRITE HIT(2) AND SPRITE HIT(1) AND BUTTON(1,0) THEN BXS=-1.3-RND*0.4

IF SPRITE HIT(2) AND SPRITE HIT(1) AND BUTTON(1,0) THEN BYS=-1.8-RND*0.4
END IF

BYS=BYS+GRAV
BX=BX+BXS
BY=BY+BYS
WAIT VBL
LOOP

LOSE:
PRINT "OPPONENT POINT"
TS=TS+1
IF TS=3 THEN GOTO LOSEE
WAIT 50
GOTO NM

WIN:
PRINT "YOUR POINT"
YS=YS+1
IF YS=3 THEN GOTO WINN
WAIT 50
GOTO NM

LOSEE:
CLS
PRINT "YOU LOSE"
WAIT 100
GOTO START

WINN:
CLS
PRINT "YOU WIN"
WAIT 100
GOTO START

